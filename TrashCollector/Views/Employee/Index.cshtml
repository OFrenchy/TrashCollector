@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>
    Today's Pickups   @*@Html.DropDownList("SelectedDayOfWeek", (IEnumerable<SelectListItem>)ViewBag.DaysOfWeek, " ")*@
    @Html.ActionLink("Mon", "Index", new { selectDayOfWeek = 1 })
    @Html.ActionLink("Tue", "Index", new { selectDayOfWeek = 2 })
    @Html.ActionLink("Wed", "Index", new { selectDayOfWeek = 3 })
    @Html.ActionLink("Thu", "Index", new { selectDayOfWeek = 4 })
    @Html.ActionLink("Fri", "Index", new { selectDayOfWeek = 5 })
</h2>
@using (Html.BeginForm("FilterDayOfWeek", "Employee"))
{
    <table>
        <tr>
            <td>
                @Html.DropDownList("selectDayOfWeek", (IEnumerable<SelectListItem>)ViewBag.DaysOfWeek, " ")
                @*@Html.DropDownList("SelectedDayOfWeek2", (IEnumerable<SelectListItem>)ViewBag.DaysOfWeek)*@
            </td>
            <td>
                <input type="submit" value="Go">
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Map All Addresses", "MapAllAddresses")  @*, new { dayOfWeek = selectDayOfWeek.Value })*@
            </td>
        </tr>

    </table>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Street)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>

        <th>
            DOW P/U
        </th>
        <th>
            Spc P/U Date
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StopDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bill)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BillDetails)
        </th>
        <th>
            @Html.DisplayName("Confirm Pickup")
        </th>
        <th>
            @Html.DisplayName("Map")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DayOfWeekPickup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialPickupDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StopDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Bill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillDetails)
            </td>
            <td>
                @Html.ActionLink("Confirm", "ConfirmPickup", new { id = item.ID }) |
            </td>
            <td>
                @Html.ActionLink("Map", "MapAddress", new { id = item.ID })
            </td>
        </tr>
    }
</table>




